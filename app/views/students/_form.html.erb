<%= form_with(model: student) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>
      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field form-group">
    <% form.label :first_name %>
    <%= form.text_field :first_name, class:'form-control', placeholder:'Prénom' %>
  </div>
  <br />

  <div class="field form-group">
    <% form.label :last_name %>
    <%= form.text_field :last_name, class:'form-control', placeholder:'Nom' %>
  </div>
  <br />

  <div class="field form-group">
    <% form.label :email %>
    <%= form.text_field :email, class:'form-control', placeholder:'Email' %>
  </div>
  <br />

  <div class="field form-group">
    <% form.label :phone %>
    <%= form.text_field :phone, class:'form-control', placeholder:'Téléphone' %>
  </div>
  <br />

  <div class="field form-group">
    <% form.label :serial_number %>
    <%= form.text_field :serial_number, class:'form-control', placeholder:'Matricule' %>
  </div>
  <br />

  <div class="field form-group">
    <% form.label :class %>
    <%= form.collection_select :class_name, Group.all, :name, :name, {include_blank: false}, {class: 'form-control '} %>
  </div>

  <br />
  <div class="actions">
    <%= form.submit "Mettre à jour", class:'btn btn-primary' %>
  </div>
<% end %>
