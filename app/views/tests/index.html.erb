


<h4>Liste des épreuves</h4>

<table class='table table-striped table-hover'>
  <thead class='table-dark'>
    <tr>
      <th>Nom de l'épreuve</th>
      <th>Branche</th>
      <th>Classe</th>
      <th>Type</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>

    <% @tests.each do |test| %>
      <tr>
        <td><%= link_to test.name, edit_test_path(test) %></td>
        <td><%= test.subject.name %></td>
        <td><%= test.group.name%></td>
        <td>
          <% if test.test_type == 0%>
            <i class="bi bi-pencil-square"></i>
          <% else %>
            <i class="bi bi-chat"></i>
          <% end %>
        </td>
        <td>
          <%= link_to test, method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer?' } do%>
            <i class="bi bi-trash-fill btn btn-outline-danger btn-sm"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle épreuve', new_test_path, class:'btn btn-primary' %>
