
<div class="card">
  <div class="card-header">
      <h4>Inscription</h4>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', placeholder:'Email'  %>
      </div>

      <div class="field">
        
        <% if @minimum_password_length %>
        
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:'form-control', placeholder:'Mot de passe (min. 6 charactÃ¨res)'  %>
      </div>

      <div class="field">
        <br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control', placeholder:'Confirmation du mot de passe'  %>
      </div>
      <br/>

      <div class="actions">
        <%= f.submit "S'inscrire", class:'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
<br/>

<%= render "devise/shared/links" %>
